                                     VerticalContentAlignment="Top"
                                     HorizontalContentAlignment="Left"
                                     AcceptsReturn="True"
                                     AcceptsTab="True"
                                     Text=""
                                     ToolTip="Field for importing/exporting custom filters. Used with the buttons below"
